<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 标题样式 -->
    <Style x:Key="TitleTextBlock" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{DynamicResource PrimaryFont}"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>

    <!-- 副标题样式 -->
    <Style x:Key="SubtitleTextBlock" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{DynamicResource PrimaryFont}"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>

    <!-- 普通文本样式 -->
    <Style x:Key="BodyTextBlock" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{DynamicResource PrimaryFont}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="LineHeight" Value="20"/>
    </Style>

    <!-- 说明文本样式 -->
    <Style x:Key="CaptionTextBlock" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{DynamicResource PrimaryFont}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBodyLight}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <!-- 状态文本样式 -->
    <Style x:Key="StatusTextBlock" TargetType="TextBlock" BasedOn="{StaticResource CaptionTextBlock}">
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Padding" Value="6,2"/>
        <Setter Property="Background" Value="{DynamicResource MaterialDesignChipBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
        <Style.Triggers>
            <Trigger Property="Text" Value="计算完成">
                <Setter Property="Background" Value="{DynamicResource SuccessBrush}"/>
                <Setter Property="Foreground" Value="White"/>
            </Trigger>
            <Trigger Property="Text" Value="计算中">
                <Setter Property="Background" Value="{DynamicResource InfoBrush}"/>
                <Setter Property="Foreground" Value="White"/>
            </Trigger>
            <Trigger Property="Text" Value="计算错误">
                <Setter Property="Background" Value="{DynamicResource ErrorBrush}"/>
                <Setter Property="Foreground" Value="White"/>
            </Trigger>
            <Trigger Property="Text" Value="未计算">
                <Setter Property="Background" Value="{DynamicResource MaterialDesignDivider}"/>
                <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- 错误消息文本样式 -->
    <Style x:Key="ErrorTextBlock" TargetType="TextBlock" BasedOn="{StaticResource BodyTextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource ErrorBrush}"/>
        <Setter Property="FontWeight" Value="Medium"/>
    </Style>

    <!-- 成功消息文本样式 -->
    <Style x:Key="SuccessTextBlock" TargetType="TextBlock" BasedOn="{StaticResource BodyTextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource SuccessBrush}"/>
        <Setter Property="FontWeight" Value="Medium"/>
    </Style>

    <!-- 链接文本样式 -->
    <Style x:Key="LinkTextBlock" TargetType="TextBlock" BasedOn="{StaticResource BodyTextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="TextDecorations" Value="Underline"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

</ResourceDictionary>
