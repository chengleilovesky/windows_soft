<Window x:Class="ArmorVehicleDamageAssessment.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:views="clr-namespace:ArmorVehicleDamageAssessment.UI.Views"
        mc:Ignorable="d"
        Title="装甲车辆抗毁伤数字化评估软件平台"
        Height="800" Width="1200"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource PrimaryFont}">

    <materialDesign:DialogHost Identifier="RootDialog">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <materialDesign:Card Grid.Row="0" 
                                 materialDesign:ElevationAssist.Elevation="Dp4"
                                 Margin="0,0,0,2">
                <Grid Height="64" Background="{DynamicResource PrimaryBrush}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 应用标题 -->
                    <StackPanel Grid.Column="0" 
                                Orientation="Horizontal" 
                                VerticalAlignment="Center"
                                Margin="24,0">
                        <materialDesign:PackIcon Kind="Shield" 
                                                 Width="32" Height="32"
                                                 Foreground="White"
                                                 VerticalAlignment="Center"/>
                        <StackPanel Margin="16,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="装甲车辆抗毁伤数字化评估软件平台"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="White"/>
                            <TextBlock Text="沈阳理工大学 • 版本 1.0.0"
                                       FontSize="12"
                                       Foreground="#E3F2FD"
                                       Opacity="0.8"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- 工具栏按钮 -->
                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="0,0,16,0">
                        <Button Style="{StaticResource MaterialDesignToolForegroundButton}"
                                ToolTip="设置"
                                Width="40" Height="40">
                            <materialDesign:PackIcon Kind="Settings" Width="20" Height="20" Foreground="White"/>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignToolForegroundButton}"
                                ToolTip="帮助"
                                Width="40" Height="40">
                            <materialDesign:PackIcon Kind="Help" Width="20" Height="20" Foreground="White"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>

            <!-- 主内容区域 -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 侧边栏导航 -->
                <materialDesign:Card Grid.Column="0" 
                                     materialDesign:ElevationAssist.Elevation="Dp2"
                                     Margin="8,0,4,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="0,16">
                            <TextBlock Text="功能模块" 
                                       Style="{StaticResource SubtitleTextBlock}"
                                       Margin="16,0,16,8"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>

                            <!-- 算例管理 -->
                            <Button x:Name="SimulationCaseButton"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left"
                                    Padding="16,12"
                                    Margin="8,2"
                                    Click="SimulationCaseButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="FolderMultiple" 
                                                             Width="20" Height="20" 
                                                             VerticalAlignment="Center"/>
                                    <TextBlock Text="算例管理" 
                                               Margin="12,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <!-- 动能穿甲仿真 -->
                            <Button Style="{StaticResource MaterialDesignFlatButton}"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left"
                                    Padding="16,12"
                                    Margin="8,2">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="BulletsOnTarget" 
                                                             Width="20" Height="20" 
                                                             VerticalAlignment="Center"/>
                                    <TextBlock Text="动能穿甲仿真" 
                                               Margin="12,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <!-- 聚能破甲仿真 -->
                            <Button Style="{StaticResource MaterialDesignFlatButton}"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left"
                                    Padding="16,12"
                                    Margin="8,2">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="FlashAlert" 
                                                             Width="20" Height="20" 
                                                             VerticalAlignment="Center"/>
                                    <TextBlock Text="聚能破甲仿真" 
                                               Margin="12,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <!-- 爆炸冲击仿真 -->
                            <Button Style="{StaticResource MaterialDesignFlatButton}"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left"
                                    Padding="16,12"
                                    Margin="8,2">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ExplosionOff" 
                                                             Width="20" Height="20" 
                                                             VerticalAlignment="Center"/>
                                    <TextBlock Text="爆炸冲击仿真" 
                                               Margin="12,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Separator Margin="16,16,16,8"/>

                            <!-- 数据库管理 -->
                            <TextBlock Text="数据库管理" 
                                       Style="{StaticResource SubtitleTextBlock}"
                                       Margin="16,8,16,8"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>

                            <!-- 材料库管理 -->
                            <Button Style="{StaticResource MaterialDesignFlatButton}"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left"
                                    Padding="16,12"
                                    Margin="8,2">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Database" 
                                                             Width="20" Height="20" 
                                                             VerticalAlignment="Center"/>
                                    <TextBlock Text="材料库管理" 
                                               Margin="12,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <!-- 车辆模型库 -->
                            <Button Style="{StaticResource MaterialDesignFlatButton}"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left"
                                    Padding="16,12"
                                    Margin="8,2">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Tank" 
                                                             Width="20" Height="20" 
                                                             VerticalAlignment="Center"/>
                                    <TextBlock Text="车辆模型库" 
                                               Margin="12,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <!-- 制式弹模型库 -->
                            <Button Style="{StaticResource MaterialDesignFlatButton}"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left"
                                    Padding="16,12"
                                    Margin="8,2">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Ammunition" 
                                                             Width="20" Height="20" 
                                                             VerticalAlignment="Center"/>
                                    <TextBlock Text="制式弹模型库" 
                                               Margin="12,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </ScrollViewer>
                </materialDesign:Card>

                <!-- 主内容区域 -->
                <materialDesign:Card Grid.Column="1" 
                                     materialDesign:ElevationAssist.Elevation="Dp1"
                                     Margin="4,0,8,0">
                    <Grid x:Name="MainContentGrid">
                        <!-- 默认显示算例管理 -->
                        <views:SimulationCaseView x:Name="SimulationCaseView"/>

                        <!-- 欢迎页面（将被算例管理替代） -->
                        <Grid x:Name="WelcomeGrid" Visibility="Collapsed">
                            <StackPanel HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"
                                        Opacity="0.6">
                                <materialDesign:PackIcon Kind="Shield" 
                                                         Width="120" Height="120"
                                                         HorizontalAlignment="Center"
                                                         Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                <TextBlock Text="装甲车辆抗毁伤数字化评估软件平台"
                                           Style="{StaticResource TitleTextBlock}"
                                           TextAlignment="Center"
                                           Margin="0,24,0,8"/>
                                <TextBlock Text="选择左侧菜单开始使用系统功能"
                                           Style="{StaticResource BodyTextBlock}"
                                           TextAlignment="Center"
                                           Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </materialDesign:Card>
            </Grid>

            <!-- 状态栏 -->
            <materialDesign:Card Grid.Row="2" 
                                 materialDesign:ElevationAssist.Elevation="Dp2"
                                 Margin="0,2,0,0">
                <Grid Height="32" Background="{DynamicResource MaterialDesignChipBackground}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" 
                                Orientation="Horizontal" 
                                VerticalAlignment="Center"
                                Margin="16,0">
                        <materialDesign:PackIcon Kind="Information" 
                                                 Width="16" Height="16"
                                                 VerticalAlignment="Center"
                                                 Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                        <TextBlock Text="就绪" 
                                   Margin="8,0,0,0"
                                   FontSize="12"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="0,0,16,0">
                        <TextBlock Text="© 2025 沈阳理工大学"
                                   FontSize="12"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>
        </Grid>
    </materialDesign:DialogHost>
</Window>
